<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background" android:height="1dp" android:gravity="center_vertical">
    <shape>
      <solid android:color="#34FFFFFF" />
    </shape>
  </item>

  <item android:id="@android:id/secondaryProgress" android:height="1dp" android:gravity="center_vertical">
    <clip>
      <shape>
        <solid android:color="#ff0000ff" />
      </shape>
    </clip>
  </item>

  <item android:id="@android:id/progress" android:height="1dp" android:gravity="center_vertical">
    <clip>
      <shape>
        <solid android:color="@color/white" />
      </shape>
    </clip>
  </item>
</layer-list>