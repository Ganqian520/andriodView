<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#80ffffff">
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_height"
      android:gravity="center"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="高"/>
    <TextView
      android:id="@+id/tv_numH"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"/>
    <SeekBar
      android:id="@+id/sb_height"
      android:max="1500"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="6"/>
    <TextView
      android:id="@+id/h_cut"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="-"/>
    <TextView
      android:id="@+id/h_add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="+"/>
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_width"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="宽"/>
    <TextView
      android:id="@+id/tv_numW"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"/>
    <SeekBar
      android:id="@+id/sb_width"
      android:max="1200"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="6"/>
    <TextView
      android:id="@+id/w_cut"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="-"/>
    <TextView
      android:id="@+id/w_add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="+"/>
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_y"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="上下"/>
    <TextView
      android:id="@+id/tv_numY"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"/>
    <SeekBar
      android:id="@+id/sb_y"
      android:max="500"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="6"/>
    <TextView
      android:id="@+id/y_cut"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="-"/>
    <TextView
      android:id="@+id/y_add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="+"/>
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_secondOval"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="圈二"/>
    <TextView
      android:id="@+id/tv_numW2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"/>
    <SeekBar
      android:id="@+id/sb_secondOval"
      android:max="1500"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="6"/>
    <TextView
      android:id="@+id/w2_cut"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="-"/>
    <TextView
      android:id="@+id/w2_add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textAlignment="center"
      android:text="+"/>
  </LinearLayout>
  <RelativeLayout
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_name"
      android:layout_alignParentStart="true"
      android:layout_marginStart="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv_move"
      android:text="按住我拖动"
      android:layout_toEndOf="@+id/tv_name"
      android:layout_marginStart="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv_isSync"
      android:layout_toEndOf="@+id/tv_move"
      android:layout_marginStart="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="宽高同步:否"/>
    <TextView
      android:id="@+id/tv_close"
      android:layout_toStartOf="@id/tv_ok"
      android:layout_marginEnd="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="关闭菜单"/>
    <TextView
      android:id="@+id/tv_ok"
      android:text="保存"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="20dp"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </RelativeLayout>
</LinearLayout>